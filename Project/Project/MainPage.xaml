<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="Project.MainPage"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" Height="480" Width="640" >

    <Canvas x:Name="LayoutRoot" Background="#FFE6FFFF">
        <Image   x:Name="bg"  Canvas.Left="0"  Source="/background.png" />
        <Button Content="Exit" Canvas.Left="32" Canvas.Top="425" Width="83" Height="27" Click="Button_Click"/>
        <Button Content="Get Sum"  x:Name="btnSum" Canvas.Left="130" Canvas.Top="425" Width="82" Height="27" Click="btnSum_Click"/>
        <sdk:Label Height="40" Name="lblSum" Canvas.Left="353" Visibility="Collapsed" Canvas.Top="425" Width="120" FontSize="24" FontWeight="Bold" Foreground="#FFF5F3F3" Loaded="lblSum_Loaded"/>
        <TextBlock Canvas.Left="185" Name="tbScores"  TextWrapping="Wrap" Visibility="Collapsed" Text="TextBlock" Canvas.Top="70" Height="53" Width="229" FontSize="14" FontWeight="Bold"/>


    </Canvas>

</UserControl>
